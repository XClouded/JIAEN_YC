<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomTheme" parent="android:Theme">
        <item name="android:radioButtonStyle">@style/RadioButton</item>
    </style>

    <!-- RadioButton style -->
    <style name="RadioButton" parent="@android:style/Widget.TextView">
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">13sp</item>
        <item name="android:button">@drawable/tv_one</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">7dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="radio_button_vertical" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10dp</item>
        <item name="android:button">@drawable/tv_one</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <!-- <item name="android:layout_marginBottom">10dp</item> -->
        <item name="android:paddingTop">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:drawablePadding">0dp</item>
    </style>

    <!-- Search RadioButton style -->
    <style name="SearchRadioButton" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:button">@drawable/tv</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:clickable">true</item>
    </style>

