<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <CheckBox
        android:id="@+id/q3_check_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:button="@drawable/check_box_not_selected"
        android:textColor="#000"
        android:textSize="13sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/q3_youcai_haoyou_pic"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:src="@drawable/q3_youcai_haoyou_pic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/q3_youcai_haoyou_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/q3_youcai_haoyou_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/q3_youcai_haoyou_xiugai"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:src="@drawable/q3_youcai_haoyou_xiugai" />

    <ImageView
        android:id="@+id/q3_youcai_haoyou_delete"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:src="@drawable/q3_youcai_haoyou_delete" />

</LinearLayout>