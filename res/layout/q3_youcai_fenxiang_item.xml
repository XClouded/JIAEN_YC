<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/q3_youcai_fenxiang_item_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/q3_youcai_fenxiang_item_detail_button"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/q3_youcai_fenxiang_item_pic"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="#fff" />

    <TextView
        android:id="@+id/q3_youcai_fenxiang_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/q3_youcai_fenxiang_item_detail"
        android:layout_marginLeft="43dp"
        android:layout_toRightOf="@+id/q3_youcai_fenxiang_item_pic"
        android:text="Name"
        android:textColor="#000"
        android:textSize="15sp" />

</RelativeLayout>