<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/q3_function_page_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/q3_function_page_tittle"
        android:gravity="center_vertical|left"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/q3_login"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="7dp"
            android:onClick="onClick"
            android:src="@drawable/q3_function_page_login" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/q3_msm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/q3_function_page_msm" />

        <ImageView
            android:id="@+id/q3_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/q3_function_page_info" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/q3_youcai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/q3_function_page_video" />

        <ImageView
            android:id="@+id/q3_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/q3_function_page" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/q3_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/q3_function_page_word" />

        <ImageView
            android:id="@+id/q3_erweima"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.35"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/q3_function_page_erweima" />

        <ImageView
            android:id="@+id/q3_process"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.35"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/q3_function_page_process" />
    </LinearLayout>

</LinearLayout>