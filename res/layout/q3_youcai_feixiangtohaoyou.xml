<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/q3_function_page_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/q3_youcai_feixiangtohaoyou_tittle" >

        <ImageView
            android:id="@+id/q3_youcaifeixiang_back"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/q3_fanhui" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/q3_youcai_feixiangtohaoyou_item_pic"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="#fff" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/q3_youcai_feixiangtohaoyou_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#000"
                android:textSize="15dp" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/q3_youcai_feixiangtohaoyou_item_dianji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击：321次        "
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/q3_youcai_feixiangtohaoyou_item_keep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="收藏：321次          "
                    android:textSize="11dp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/q3_youcai_feixiangtohaoyou_item_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击：321次        "
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/q3_youcai_feixiangtohaoyou_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="收藏：321次        "
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/q3_youcai_feixiangtohaoyou_item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="收藏：321次        "
                    android:textSize="11dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:src="@drawable/q3_fengexian" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical|center_horizontal" >

        <EditText
            android:id="@+id/q3_youcai_feixiangtohaoyou_phone"
            android:layout_width="260dp"
            android:layout_height="280dp"
            android:background="@drawable/q3_youcai_feixiangtohaoyou_phone_bg"
            android:hint="好友号码添加方式：1.直接输入，以“，”隔开；2从通讯录中选入。一次分享最多30位好友，若超过30位，请多次分享"
            android:padding="4dp"
            android:phoneNumber="true" />

        <ImageView
            android:id="@+id/q3_youcai_feixiangtohaoyou_phone_bendi"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_toRightOf="@+id/q3_youcai_feixiangtohaoyou_phone"
            android:scaleType="fitXY"
            android:src="@drawable/q3_youcai_feixiangtohaoyou_bendi" />

        <ImageView
            android:id="@+id/q3_youcai_feixiangtohaoyou_phone_feixiang"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/q3_youcai_feixiangtohaoyou_phone"
            android:layout_alignLeft="@+id/q3_youcai_feixiangtohaoyou_phone_bendi"
            android:scaleType="fitXY"
            android:src="@drawable/q3_youcai_feixiangtohaoyou_feixiang" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical" >

        <Button
            android:id="@+id/q3_youcai_feixiangtohaoyou_share"
            android:layout_width="80dp"
            android:layout_height="23dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/q3_youcai_feixiangtohaoyou_share" />

        <Button
            android:id="@+id/q3_youcai_feixiangtohaoyou_exit"
            android:layout_width="80dp"
            android:layout_height="23dp"
            android:background="@drawable/q3_youcai_feixiangtohaoyou_exit" />
    </LinearLayout>

</LinearLayout>