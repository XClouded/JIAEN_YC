<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" >
        </FrameLayout>

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.0"
            android:visibility="gone" >
        </TabWidget>

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|fill_horizontal"
            android:background="@drawable/bottom_line_bar_bg"
            android:gravity="center_horizontal|bottom"
            android:orientation="horizontal" >

            <RadioButton
                style="@style/RadioButton"
                android:layout_margin="2.0dip"
                android:drawableTop="@drawable/home_bg"
                android:tag="radio_button0"
                android:text="首页" />

            <RadioButton
                style="@style/RadioButton"
                android:layout_margin="2.0dip"
                android:drawableTop="@drawable/modify_bg"
                android:tag="radio_button1"
                android:text="加工" />

            <RadioButton
                style="@style/RadioButton"
                android:layout_margin="2.0dip"
                android:drawableTop="@drawable/message_bg"
                android:tag="radio_button2"
                android:text="彩信" />

            <RadioButton
                style="@style/RadioButton"
                android:layout_margin="2.0dip"
                android:drawableTop="@drawable/search_bg"
                android:tag="radio_button3"
                android:text="搜索" />

            <RadioButton
                style="@style/RadioButton"
                android:layout_margin="2.0dip"
                android:drawableTop="@drawable/store_bg"
                android:tag="radio_button4"
                android:text="收藏" />
        </RadioGroup>
    </LinearLayout>

</TabHost>