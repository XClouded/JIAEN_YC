<?xml version="1.0" encoding="utf-8"?>
<com.androids.photoalbum.view.BaseLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_gravity="top|center_horizontal"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/right_button"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:background="@drawable/q3_fanhui"
        android:textColor="#FFFFFFFF"
        android:textSize="0.1sp"
        android:visibility="gone" >
    </Button>

    <TextView
        android:id="@+id/center_textview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80.0dip"
        android:layout_marginRight="80.0dip"
        android:layout_weight="1.0"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="#FF000000"
        android:textSize="18.0dip"
        android:visibility="invisible" >
    </TextView>

    <Button
        android:id="@+id/mid_button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dip"
        android:background="@drawable/tuijianhaoyou_btn_bg"
        android:text="推荐给好友"
        android:textColor="#FFFFFFFF"
        android:textSize="11.0sp"
        android:visibility="gone" >
    </Button>

    <Button
        android:id="@+id/left_button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8.0dip"
        android:background="@drawable/tuijianhaoyou_btn_bg"
        android:textColor="#FFFFFFFF"
        android:textSize="11.0sp"
        android:visibility="gone" >
    </Button>

</com.androids.photoalbum.view.BaseLayout>