<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFF4F4F4"
    >
    
    <include android:id="@+id/title" layout="@layout/titlebar"/>
<!--     <ScrollView android:layout_width="fill_parent" -->
<!--     	android:layout_height="fill_parent" -->
<!--     	android:layout_below="@id/title" -->
<!--     	android:scrollbars="none"> -->
    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="393dp"
	    android:layout_marginTop="0dp"
	    android:orientation="vertical"
	    android:layout_gravity="center_horizontal|center_vertical"
	    android:background="@drawable/register_frame_bg">
	    <TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center_horizontal|top"
		    android:layout_marginTop="22dp"
		    android:text="用户登录"
		    android:textStyle="bold"
		    android:textColor="@android:color/white"
		    android:textSize="18sp"/>
	    <TextView
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="55dp"
	    	android:layout_marginTop="32dp"
	    	android:textStyle="bold"
	    	android:textColor="@android:color/white"
	    	android:text="用户名"/>
	    <EditText 
	    	android:id="@+id/user_name"
	    	android:layout_width="228dp"
		    android:layout_height="47dp"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp" 
		    android:layout_marginLeft="5dp"
		    android:singleLine="true"
		    android:inputType="number"
		    android:maxLength="11"
		    android:layout_gravity="center_horizontal"
	    	android:background="@drawable/mobile_textfield_bg"/>

	    <TextView
	    	android:layout_width="60dp"
	    	android:layout_height="wrap_content"
	    	android:textStyle="bold"
	    	android:paddingTop="12dp"
	    	android:textColor="@android:color/white"
	    	android:layout_marginLeft="55dp"
	    	android:inputType="number"
	    	android:text="密码"/>
    	<EditText
        	android:id="@+id/pwd"
        	android:layout_width="235dp"
        	android:layout_height="47.0dip"
        	android:paddingLeft="10dp"
	    	android:paddingRight="10dp" 
	    	android:layout_marginLeft="8dp"
            android:password="true"
        	android:singleLine="true"
        	android:selectAllOnFocus="true"
        	android:layout_gravity="center_horizontal"
        	android:background="@drawable/password_textfield_bg"
        	android:maxLength="16"/>
   		<CheckBox
   			android:id="@+id/auto_login"
   			android:layout_width="wrap_content"
    		android:layout_height="30dp"
    		android:paddingTop="5dp"
    		android:text="下次自动登录" 
    		android:button="@drawable/check_box_not_selected"
    		android:textStyle="bold"
    		android:layout_marginLeft="55dp"
    		android:textColor="@android:color/black"/>
   		<Button
   			android:id="@+id/btn_login"
   			android:layout_width="wrap_content"
   			android:layout_height="75dp"
   			android:layout_marginLeft="165dp"
   			android:background="@drawable/login_button_bg"/>
		<LinearLayout
			android:layout_width="296dp"
			android:layout_height="80dp"
			android:layout_marginLeft="11dp"
			android:background="@drawable/login_bottom_line"
			android:orientation="horizontal" >
			<TextView 
				android:id="@+id/register"
	   			android:layout_width="0dp"
	   			android:layout_height="80dp"
	   			android:gravity="center"
	   			android:text="怎样注册？"
	   			android:layout_marginLeft="5dp"
	   			android:textStyle="bold"
	   			android:textSize="14sp"
	   			android:layout_weight="1"
	   			android:textColor="@android:color/white" />
	   		<TextView 
	   			android:id="@+id/forget_pwd"
	   			android:layout_width="0dp"
	   			android:layout_height="80dp"
	   			android:gravity="center"
	   			android:layout_marginLeft="5dp"
	   			android:text="忘记密码？"
	   			android:textStyle="bold"
	   			android:textSize="14sp"
	   			android:layout_weight="1"
	   			android:textColor="@android:color/white"/>
		</LinearLayout>
	</LinearLayout>
<!-- 	</ScrollView> -->
</LinearLayout>