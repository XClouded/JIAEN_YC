<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF4F4F4" >
    <include android:id="@+id/title" layout="@layout/titlebar"/>
    <LinearLayout 
    	android:id="@+id/bottom_function_bar"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="55dp"
		android:gravity="center_vertical"
		android:layout_gravity="bottom"
		android:layout_marginBottom="0dp"
		android:background="@drawable/jg_control_pan"
		android:orientation="horizontal">
		<ImageButton 
			android:id="@+id/quit"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:background="@drawable/jg_back_btn"/>
		<ImageButton 
			android:id="@+id/back"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_margin="5dp"
			android:background="@drawable/jg_recover_btn"/>
			
		<Gallery 
			android:id="@+id/record_list" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:spacing="0dp"
			android:padding="2dp"
			android:visibility="gone"
			android:gravity="left|center_vertical"
			android:layout_gravity="right|center_vertical"
			android:background="@drawable/jg_assets_pan"
			android:orientation="horizontal">
		</Gallery>
		
		<HorizontalScrollView android:id="@+id/mScrollView"
			android:background="@drawable/jg_assets_pan"
			android:scrollbars="none"
			android:layout_gravity="center_horizontal|center_vertical" 
			android:layout_width="match_parent" android:layout_height="wrap_content">
			<LinearLayout android:layout_width="match_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<GridView android:id="@+id/mGridView" android:layout_width="match_parent"
					android:scrollbars="horizontal"
					android:layout_height="match_parent" />
			</LinearLayout>
		</HorizontalScrollView>
	</LinearLayout>
    <FrameLayout  
    	android:id="@+id/frame_layout"
    	android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:layout_below="@id/title"
        android:measureAllChildren="false"
        android:layout_above="@id/bottom_function_bar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <FrameLayout
	       	android:id="@+id/webview_frame"
	       	android:fitsSystemWindows="true"
	       	android:scrollbars="none"
	       	android:layout_width="fill_parent"
	       	android:layout_height="fill_parent"
	       	android:layout_gravity="center_horizontal|center_vertical"
	       	android:gravity="center_horizontal|center_vertical">
	    </FrameLayout> 
	    <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="left"
            android:background="@drawable/left_opetion_panel_bg"
            android:id="@+id/left_organize"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <Button
            	android:layout_width="wrap_content"
            	android:layout_height="0dp"
            	android:layout_weight="1"
                android:tag="radio_button0"
                android:layout_marginBottom="10dip"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:drawablePadding="0dp"
                android:drawableTop="@drawable/select_picture_bg"
                android:text="选择照片"
                android:background="@drawable/tv_null"/>
            <Button  
            	android:layout_width="wrap_content"
            	android:layout_height="0dp"
            	android:layout_weight="1"
                android:tag="radio_button1"
                android:layout_marginBottom="10dip"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:drawablePadding="0dp"
                android:text="本地拍照"
                android:background="@drawable/tv_null"
                android:drawableTop="@drawable/local_photo_bg"
                style="@style/radio_button_vertical"/>
            <Button
            	android:layout_width="wrap_content"
            	android:layout_height="0dp"
            	android:layout_weight="1"
                android:tag="radio_button2"
                android:layout_marginBottom="10dip"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:drawablePadding="0dp"
                android:text="模板选择"
                android:background="@drawable/tv_null"
                android:drawableTop="@drawable/template_bg"
                style="@style/radio_button_vertical"/>
            <Button
            	android:layout_width="wrap_content"
            	android:layout_height="0dp"
            	android:layout_weight="1"
                android:tag="radio_button3"
                android:layout_marginBottom="10dip"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:drawablePadding="0dp"
                android:text="相框选择"
                android:background="@drawable/tv_null"
                android:drawableTop="@drawable/photo_frame_bg"
                style="@style/radio_button_vertical"/>
            <Button
            	android:layout_width="wrap_content"
            	android:layout_height="0dp"
            	android:layout_weight="1"
                android:tag="radio_button4"
                android:drawablePadding="0dp"
                android:background="@drawable/tv_null"
                android:layout_marginBottom="10dip"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:text="特效选择"
                android:drawableTop="@drawable/te_xiao_bg"
                style="@style/radio_button_vertical"/>
            <Button
            	android:layout_width="wrap_content"
            	android:layout_height="0dp"
            	android:layout_weight="1"
                android:tag="radio_button5"
                android:drawablePadding="0dp"
                android:background="@drawable/tv_null"
                android:layout_marginBottom="10dip"
                android:textColor="@android:color/black"
                android:textSize="10dp"
                android:text="添加文字"
                android:drawableTop="@drawable/charactor_bg"
                style="@style/radio_button_vertical"/>
        </LinearLayout>
        <ImageButton 
        	android:id="@+id/left_btn"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:background="@drawable/left_arrow_back"
        	android:layout_gravity="top|left"/>
        <ImageButton 
        	android:id="@+id/right_btn"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:background="@drawable/select_to_submmit"
        	android:layout_gravity="top|right"/>
        <LinearLayout android:id="@+id/bottom_gallery"
	        android:orientation="vertical"
	        android:paddingTop="0dp"
	        android:visibility="gone"
	        android:background="@android:color/darker_gray"
	        android:layout_gravity="center_horizontal|bottom"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
	        <ImageView 
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
	        	android:id="@+id/keyboard_bar"
	        	android:src="@drawable/keyboard_bar"/>
			<HorizontalScrollView android:id="@+id/bottom_crollView"
				android:layout_marginBottom="4dp" 
				android:scrollbars="none"
				android:layout_gravity="center_horizontal|bottom" 
				android:layout_width="match_parent" android:layout_height="wrap_content">
				<LinearLayout android:layout_width="match_parent"
					android:layout_height="wrap_content" android:orientation="horizontal">
					<GridView android:id="@+id/gallery" android:layout_width="match_parent"
						android:scrollbars="none"
						android:layout_height="match_parent" />
				</LinearLayout>
			</HorizontalScrollView>
			<ScrollView android:layout_width="match_parent"
				android:layout_height="wrap_content">
		    <LinearLayout android:id="@+id/bottom_words"
		        android:orientation="vertical"
		        android:visibility="gone"
		        android:layout_gravity="center_horizontal|bottom"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content">
		  	    <LinearLayout
			        android:orientation="horizontal"
			        android:layout_gravity="center_horizontal|bottom"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content">
			        <TextView 
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:textColor="@android:color/black"
			        	android:layout_gravity="top"
			        	android:text="文字内容:"/>
			        <AutoCompleteTextView 
			        	 android:id="@+id/words_content"
			 	  	 	 android:layout_width="wrap_content"
			 	  	 	 android:imeOptions="actionDone"
			 	  	 	 android:layout_height="60dp"
			 	  	 	 android:layout_margin="5dp"
			 	  	 	 android:textStyle="bold"
			 	  	 	 android:paddingLeft="5dp"
			 	  	 	 android:paddingRight="5dp"
			 	  	 	 android:textSize="12dp"
			 	  	 	 android:background="@drawable/selected_photo_title_text"
			 	  	 	 android:singleLine="true"/>
			    </LinearLayout>
		  	    <LinearLayout
			        android:orientation="horizontal"
			        android:layout_gravity="center_horizontal|bottom"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="3dp">
			        <TextView 
			        	android:layout_width="wrap_content"
			        	android:layout_height="wrap_content"
			        	android:layout_weight="1"
			        	android:textColor="@android:color/black"
			        	android:text="文字大小:"/>
			        	
			        <SeekBar android:id="@+id/word_size"
			        	android:layout_width="0dp"
			        	android:layout_height="wrap_content"
			        	android:layout_weight="6"
			        	android:max="40"
			        	android:progress="20"/>
			    </LinearLayout>
		  	    <LinearLayout
			        android:orientation="horizontal"
			        android:layout_gravity="center_horizontal|bottom"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content">
			        <ImageView 
			        	android:id="@+id/selected_color"
			        	android:layout_width="20dp"
			        	android:layout_height="30dp"
			        	android:layout_marginLeft="0dp"
			        	android:layout_marginRight="5dp"
			        	android:src="#000000"/>
			  	    <include android:id="@+id/color_table" layout="@layout/color_table_layout"/>
			    </LinearLayout>
	     	</LinearLayout>
	     	</ScrollView>
     	</LinearLayout>
    </FrameLayout>
</RelativeLayout>